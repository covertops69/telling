<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <declare-styleable name="EditTextValidate">
    <attr name="errorTextSize" format="dimension" />
    <attr name="labelTextSize" format="dimension" />
    <attr name="dividerColor" format="color"/>
    <attr name="dividerColorFocus" format="color"/>
    <attr name="android:textSize" />
    <attr name="android:hint"/>
    <attr name="android:imeOptions"/>
    <attr name="android:inputType"/>
    <attr name="android:textColor"/>
    <attr name="android:textColorHint"/>
    <attr name="textInputPadding" format="dimension"/>
    <attr name="mask" format="string"/>
    <attr name="maskFill" format="string"/>
    <attr name="charRepresentation" format="string"/>
    <attr name="android:drawableRight" />
  </declare-styleable>

  <dimen name="default_edit_textsize">@dimen/text_medium</dimen>
  <dimen name="default_error_textsize">@dimen/text_tinier</dimen>
  <dimen name="default_label_textsize">@dimen/text_medium</dimen>

  <style name="EditTextValidationStyle">
    <item name="android:textSize">@dimen/default_edit_textsize</item>
    <item name="errorTextSize">@dimen/default_error_textsize</item>
    <item name="labelTextSize">@dimen/default_label_textsize</item>
  </style>

